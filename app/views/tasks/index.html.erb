<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Anexo</th>
      <th>Prioridade</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.nome %></td>
        <td><%= task.descricao %></td>
        <td><%= task.anexo %></td>
        <td><%= task.prioridade %></td>
        <td><%= task.usuario %></td>
        <td><%= link_to 'Mostrar', task %></td>
        <td><%= link_to 'Editar', edit_task_path(task) %></td>
        <td><%= link_to 'Excluir', task, method: :delete, data: { confirm: 'Confirma a exclusao?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Task', new_task_path %>
